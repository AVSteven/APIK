<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_general"
    tools:context="com.lutec.steven.proyectodiseno_1.MenuPrincipal">

    <ImageButton
        android:id="@+id/btn_crear_MP"
        android:layout_width="195dp"
        android:layout_height="195dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/mascota_crear" />

    <ImageButton
        android:id="@+id/btn_modificar_MP"
        android:layout_width="195dp"
        android:layout_height="195dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/btn_crear_MP"
